@model UserAddressViewModel
@{
    ViewData["Title"] = "EditAddress";
}

<h2>Edit Address</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">

            <div class="form-group">
                <input asp-for="SelectedAddress" class="form-control" />
                <input type="hidden" asp-for="UserID" />
                <span asp-validation-for="SelectedAddress" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
    
</div>

<br />
<a asp-action="DisplayAddress">Back to Address</a>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}