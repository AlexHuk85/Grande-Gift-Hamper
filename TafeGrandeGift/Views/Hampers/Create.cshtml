@model TafeGrandeGift.Models.HamperViewModels.HamperCreateViewModel
@{
    ViewData["Title"] = "Create";
}
<h2>Create new Hamper</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HamperName" class="control-label"></label>
                <input asp-for="HamperName" class="form-control" />
                <span asp-validation-for="HamperName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category Name</label>
                <select name="CategoryId" class="form-control">
                    @foreach (var item in Model.CategoryList)
                    {
                        <option value="@item.CategoryId">@item.CategoryName</option>
                    }
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HamperPrice" class="control-label"></label>
                <input asp-for="HamperPrice" class="form-control" />
                <span asp-validation-for="HamperPrice" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="HamperDetail" class="control-label"></label>
                <textarea data-val="true"
                          data-val-maxlength-max="5000"
                          id="HamperDetail"
                          name="HamperDetail"
                          class="form-control"
                          style="height:300px"></textarea>
            </div>

