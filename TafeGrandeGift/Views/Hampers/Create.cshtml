                                 @Html.DisplayFor(modelItem => item.ProductQty)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>*@
            <div class="form-group">
                <label asp-for="Upload" class="control-label"></label>
                <input type="file" name="Upload" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
