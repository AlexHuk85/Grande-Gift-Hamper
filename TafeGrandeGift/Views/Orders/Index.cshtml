@model TafeGrandeGift.Models.OrderViewModel.OrderIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>@Model.UserName, Here is Your Order History </h2>

<table class="table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Ship To</th>
            <th>Item(s)</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>@item.OrderDate</td>
                <td>@item.UserAddress</td>
                <td>
                    @foreach (var i in Model.OrderHampers)
                    {
                        @if (item.OrderId == i.OrderId)
                        {
                            <li>@i.HamperName</li>
                        }

                    }
                </td>
                <td>@item.TotalWithShipping</td>
            </tr>
        }
    </tbody>
</table>

